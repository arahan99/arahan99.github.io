alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -lrth'
alias ls='ls --color=auto'



alias vim='vim.tiny'

alias lsx="ls -Sharl"
alias dux="du -h -d1 | sort -h"
alias freex="free -h -h -w"
alias dfx="df -h"



alias sc="systemctl"
alias scs="systemctl status"
alias scl="systemctl list-unit-files --state=enabled"
alias scf="systemctl --failed"
alias scr="systemctl list-units --type=service --state=running"


alias jc="journalctl"
alias jcx="journalctl -xe"

export LS_COLORS='di=0;32'

alias dnfx='dnf repoquery -C --installed --qf "%{size} %{name}" | sort -n | numfmt --to=iec --format="%.2f"'

shopt -s nocaseglob



alias pg="apt remove --purge"
alias aclean="apt clean;apt autoremove; apt autoclean"